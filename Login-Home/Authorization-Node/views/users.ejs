<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Users</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>User List</h1>
    <a href="/users/logout">Logout</a>
    <table>
        <tr>
            <th>Username</th>
            <th>Actions</th>
        </tr>
        <% users.forEach(user => { %>
            <tr>
                <td><%= user.username %></td>
                <td>
                    <a href="/users/<%= user._id %>">Edit</a>
                    <form action="/users/delete/<%= user._id %>" method="POST" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </table>
</body>
</html>
